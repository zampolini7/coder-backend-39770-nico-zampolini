<div class="container bg-warning">
  <h1 class="pt-5">Welcome to our artisan bakery</h1>
  <div class="d-flex row flex-row">
    <div class="d-flex col-12 flex-wrap">

      {{#each products}}
        <div
          class="col-4 d-flex justify-content-center p-4"
          {{! style="max-width: 400px; max-height: 500px;" }}
        >
          <div class="card justify-content-between h-100" style="width: 15rem">
            <img
              src={{this.thumbnail}}
              style="max-width: 400px; max-height: 200px; object-fit: scale-down;"
            />
            <div class="card-body d-flex flex-column justify-content-end">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p class="card-text">Unidades disponibles: {{this.stock}}</p>
              <p class="card-text">Precio: {{this.price}}</p>

              <button
                id={{this.id}}
                class="agregar-al-carrito btn btn-link w-100 d-flex justify-content-center text-decoration-none"
              >

                <a
                  href="/products/{{this.id}}"
                  class="btn text-light bg-dark d-flex justify-content-center"
                >Ver detalle del producto </a>

              </button>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</div>